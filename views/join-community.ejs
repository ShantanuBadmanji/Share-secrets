<%- include('partials/header') %>
<%- include('partials/navbar2') %>

<h1 class="display-3 text-center">Share Secrets in<br> Trusted Communities!</h1>
    <div class="container  d-flex  align-items-center">
            <div class="jumbotron  centered flex-fill ">
                <p >Join a new Community</p>

                <form action="/join-community" method="POST">
                    <div class="input-group mb-3">
                        <select class="custom-select" name="communityName" id="inputGroupSelect02">
                            <option selected>Choose...</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                            <% communities.forEach(community=> { %>
                                <option value=<%=community.name %>><%= community.name %>
                                </option>
                                <% }) %>
                        </select>
                        <div class="input-group-append">
                            <label class="input-group-text" for="inputGroupSelect02">Community </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control text-center" name="communityCode"
                            placeholder="Community joining code">
                    </div>
                    <% if (joinError) { %>
                        <div class="alert alert-warning" role="alert">
                            <%= joinError %>
                        </div>
                        <% } %>
                            <button type="submit" class="btn btn-pink">Join</button>
                </form>
            </div>
            <div class="m-5 pt-5">
                <h1>OR</h1>
            </div>
            <div class="jumbotron centered flex-fill">
                <p class="">Create a new Community</p>

                <form action="/create-community" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control text-center" name="communityName"
                            placeholder="Enter The New Community Name">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control text-center" name="communityCode"
                            placeholder="Create a new community joining code">
                    </div>
                    <% if (createError) { %>
                        <div class="alert alert-warning" role="alert">
                            <%= createError %>
                        </div>
                        <% } %>
                            <button type="submit" class="btn btn-pink">Create</button>
                </form>
            </div>
    </div>
    <%- include('partials/footer') %>