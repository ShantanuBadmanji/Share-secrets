<%- include('partials/header') %>

  <div class="container mt-5">
    <h1>Login</h1>

    <div class="row">
      <div class="col-sm-8">
        <div class="card">
          <div class="card-body">

            <!-- Makes POST request to /login route -->
            <form action="/login" method="POST">
              <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" name="username">
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" name="password">
              </div>
              <button type="submit" class="btn btn-dark">Login</button>
              <p><strong>Don't have an account? <a class="" href="/register" role="button">Sign Up</a></strong></p>
            </form>

          </div>
        </div>
      </div>

      <div class="col-sm-4 d-flex flex-column justify-content-start">
        <div class="card my-2">
          <a class="btn btn-block btn-google" href="/auth/google" role="button">
            <i class="fab fa-google"></i>
            Sign In with Google
          </a>
        </div>

        <div class="card social-block my-2">
          <a class="btn btn-block btn-facebook" href="/auth/facebook" role="button">
            <i class="fab fa-facebook"></i>
            Sign In with facbook
          </a>
        </div>
      </div>

    </div>

    <% if (err) { %>
      <div class="alert alert-warning" role="alert">
        <%= err %>
      </div>
      <% } %>
  </div>

  <%- include('partials/footer') %>